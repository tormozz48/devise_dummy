<!DOCTYPE html>
<html>
<head>
  <title>Communal2</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container-fluid">
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
      <a class="brand" href="#"><%=t('application.name')%></a>
      <div class="btn-group pull-right">
        <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
          <i class="icon-user"></i>&nbsp;<%=current_user.getUserName%>
          <span class="caret"></span>
        </a>
        <ul class="dropdown-menu">
          <li><a href="#">Profile</a></li>
          <li class="divider"></li>
          <li><a href="#">Sign Out</a></li>
        </ul>
      </div>
      <div class="nav-collapse">
        <ul class="nav">
          <li>
            <%= link_to t('top_menu.home'), root_path %>
          </li>
          <li>
            <a href="#about"><%=t('top_menu.about')%></a>
          </li>
          <li>
            <a href="#contact"><%=t('top_menu.contacts')%></a>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>
<div class="container-fluid">
  <div class="row-fluid">
    <div class="span3">
       <%=render 'menu/main_menu'%>
    </div>
    <div class="span9">
      <%= yield %>
    </div>
  </div>
</div>
</body>
</html>